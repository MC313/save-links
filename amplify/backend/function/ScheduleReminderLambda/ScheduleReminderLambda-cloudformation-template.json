{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Lambda Function resource stack creation using Amplify CLI",
	"Parameters": {
		"env": {
			"Type": "String"
		},
		"cloudWatchEventNamePrefix": {
			"Type": "String",
			"Default": "SCHEDULED_REMINDER"
		},
		"functionDependenciesLayerArn": {
			"Type": "String",
			"Default": "functionDependenciesLayerArn"
		},
		"functionSendReminderNotificationLambdaArn": {
			"Type": "String",
			"Default": "functionSendReminderNotificationLambdaArn"
		},
		"storageLinksTableName": {
			"Type": "String",
			"Default": "storageLinksTableName"
		},
		"storageLinksTableStreamArn": {
			"Type": "String",
			"Default": "storageLinksTableStreamArn"
		},
		"storageLinksTableArn": {
			"Type": "String",
			"Default": "storageLinksTableArn"
		}
	},
	"Conditions": {
		"ShouldNotCreateEnvResources": {
			"Fn::Equals": [
				{
					"Ref": "env"
				},
				"NONE"
			]
		}
	},
	"Resources": {
		"LambdaFunction": {
			"Type": "AWS::Lambda::Function",
			"Metadata": {
				"aws:asset:path": "./src",
				"aws:asset:property": "Code"
			},
			"Properties": {
				"Handler": "index.handler",
				"FunctionName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"ScheduleReminderLambda",
						{
							"Fn::Join": [
								"",
								[
									"ScheduleReminderLambda",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"Environment": {
					"Variables": {
						"CLOUD_WATCH_EVENT_NAME_PREFIX": {
							"Ref": "cloudWatchEventNamePrefix"
						},
						"CLOUD_WATCH_EVENTS_ROLE_ARN": {
							"Ref": "CloudWatchEventsExecutionRole"
						},
						"ENV": {
							"Ref": "env"
						},
						"REGION": {
							"Ref": "AWS::Region"
						},
						"FUNCTION_SENDREMINDERNOTIFICATIONLAMBDA_ARN": {
							"Ref": "functionSendReminderNotificationLambdaArn"
						},
						"STORAGE_LINKSTABLE_NAME": {
							"Ref": "storageLinksTableName"
						},
						"STORAGE_LINKSTABLE_ARN": {
							"Ref": "storageLinksTableArn"
						}
					}
				},
				"Role": {
					"Fn::GetAtt": [
						"LambdaExecutionRole",
						"Arn"
					]
				},
				"Runtime": "nodejs12.x",
				"Layers": [
					{
						"Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:layer:DependenciesLayer:1"
					}
				],
				"Timeout": "25",
				"Code": {
					"S3Bucket": "amplify-linkslocker-dev-14320-deployment",
					"S3Key": "amplify-builds/ScheduleReminderLambda-72394238752f6a464674-build.zip"
				}
			}
		},
		"LambdaExecutionRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"linkslockerLambdaRole088f2785",
						{
							"Fn::Join": [
								"",
								[
									"linkslockerLambdaRole088f2785",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": [
									"lambda.amazonaws.com"
								]
							},
							"Action": [
								"sts:AssumeRole"
							]
						}
					]
				}
			}
		},
		"CloudWatchEventsExecutionRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"linkslockerCloudWatchEventsRole088f3896",
						{
							"Fn::Join": [
								"",
								[
									"linkslockerCloudWatchEventsRole088f3896",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": "events.amazonaws.com"
							},
							"Action": "sts:AssumeRole"
						}
					]
				}
			}
		},
		"lambdaexecutionpolicy": {
			"DependsOn": [
				"LambdaExecutionRole"
			],
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "lambda-execution-policy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"logs:CreateLogGroup",
								"logs:CreateLogStream",
								"logs:PutLogEvents"
							],
							"Resource": {
								"Fn::Sub": [
									"arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
									{
										"region": {
											"Ref": "AWS::Region"
										},
										"account": {
											"Ref": "AWS::AccountId"
										},
										"lambda": {
											"Ref": "LambdaFunction"
										}
									}
								]
							}
						}
					]
				}
			}
		},
		"AmplifyResourcesPolicy": {
			"DependsOn": [
				"LambdaExecutionRole"
			],
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "amplify-lambda-execution-policy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"lambda:Get*",
								"lambda:List*",
								"lambda:Invoke*"
							],
							"Resource": [
								{
									"Fn::Join": [
										"",
										[
											"arn:aws:lambda:",
											{
												"Ref": "AWS::Region"
											},
											":",
											{
												"Ref": "AWS::AccountId"
											},
											":function:",
											{
												"Ref": "functionSendReminderNotificationLambdaArn"
											}
										]
									]
								}
							]
						},
						{
							"Effect": "Allow",
							"Action": [
								"dynamodb:Get*",
								"dynamodb:BatchGetItem",
								"dynamodb:List*",
								"dynamodb:Describe*",
								"dynamodb:Scan",
								"dynamodb:Query"
							],
							"Resource": [
								{
									"Ref": "storageLinksTableArn"
								},
								{
									"Fn::Join": [
										"/",
										[
											{
												"Ref": "storageLinksTableArn"
											},
											"index/*"
										]
									]
								}
							]
						}
					]
				}
			}
		},
		"CloudWatchEventsExecutionPolicy": {
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "CloudWatchEventsExecutionPolicy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"events:putRule",
								"events:putTargets"
							],
							"Resource": {
								"Fn::Sub": "arn:aws:events:${AWS::Region}:${AWS::AccountId}:rule/${cloudWatchEventNamePrefix}*"
							}
						},
						{
							"Effect": "Allow",
							"Action": "iam:PassRole",
							"Resource": "arn:aws:iam::*:role/AWS_Events_Invoke_Targets"
						}
					]
				}
			}
		},
		"LinksTableTriggerPolicy": {
			"DependsOn": [
				"LambdaExecutionRole"
			],
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "lambda-trigger-policy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"dynamodb:DescribeStream",
								"dynamodb:GetRecords",
								"dynamodb:GetShardIterator",
								"dynamodb:ListStreams"
							],
							"Resource": [
								{
									"Ref": "storageLinksTableStreamArn"
								}
							]
						}
					]
				}
			}
		},
		"LinksTableTrigger": {
			"Type": "AWS::Lambda::EventSourceMapping",
			"DependsOn": [
				"LinksTableTriggerPolicy"
			],
			"Properties": {
				"BatchSize": 100,
				"Enabled": true,
				"EventSourceArn": {
					"Ref": "storageLinksTableStreamArn"
				},
				"FunctionName": {
					"Fn::GetAtt": [
						"LambdaFunction",
						"Arn"
					]
				},
				"StartingPosition": "LATEST"
			}
		}
	},
	"Outputs": {
		"Name": {
			"Value": {
				"Ref": "LambdaFunction"
			}
		},
		"Arn": {
			"Value": {
				"Fn::GetAtt": [
					"LambdaFunction",
					"Arn"
				]
			}
		},
		"Region": {
			"Value": {
				"Ref": "AWS::Region"
			}
		},
		"LambdaExecutionRole": {
			"Value": {
				"Ref": "LambdaExecutionRole"
			}
		}
	}
}