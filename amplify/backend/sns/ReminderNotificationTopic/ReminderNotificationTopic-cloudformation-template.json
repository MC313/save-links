{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "SNS resource to receive notification messages from cloudwatch scheduled reminder.",
    "Parameters": {
        "apiLinksLockerAPIRootUrl": {
            "Type": "String"
        },
        "env": {
            "Type": "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "ReminderNotificationTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        "ScheduledReminderNotificationTopic",
                        {
                            "Fn::Join": [
                                "",
                                [
                                    "ScheduledReminderNotificationTopic",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "Subscription": [
                    {
                        "Endpoint": {
                            "Fn::Sub": "arn:aws:lambda:us-east-1:420408896210:function:NotificationLambda-dev"
                        },
                        "Protocol": "lambda"
                    },
                    {
                        "Endpoint": {
                            "Fn::Sub": "${apiLinksLockerAPIRootUrl}/${env}/reminder/notifications"
                        },
                        "Protocol": "https"
                    }
                ]
            }
        },
        "PublishNotificationsUser": {
            "Type": "AWS::IAM::User"
        },
        "LambdaInvokePermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "Principal": "sns.amazonaws.com",
                "SourceArn": {
                    "Ref": "ReminderNotificationTopic"
                },
                "FunctionName": {
                    "Fn::Sub": "arn:aws:lambda:us-east-1:420408896210:function:NotificationLambda-dev"
                }
            }
        }
    },
    "Outputs": {
        "Arn": {
            "Value": {
                "Ref": "ReminderNotificationTopic"
            }
        },
        "Name": {
            "Value": {
                "Fn::GetAtt": [
                    "ReminderNotificationTopic",
                    "TopicName"
                ]
            }
        }
    }
}