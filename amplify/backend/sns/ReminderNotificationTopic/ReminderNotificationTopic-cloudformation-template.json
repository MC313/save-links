{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "SNS resource to receive notification messages from cloudwatch scheduled reminder.",
    "Parameters": {
        "apiLinksLockerAPIRootUrl": {
            "Type": "String"
        },
        "env": {
            "Type": "String"
        }
    },
    "Conditions": {
        "ShouldNotCreateEnvResources": {
            "Fn::Equals": [
                {
                    "Ref": "env"
                },
                "NONE"
            ]
        }
    },
    "Resources": {
        "ReminderNotificationTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "TopicName": {
                    "Fn::If": [
                        "ShouldNotCreateEnvResources",
                        "ScheduledReminderNotificationTopic",
                        {
                            "Fn::Join": [
                                "",
                                [
                                    "ScheduledReminderNotificationTopic",
                                    "-",
                                    {
                                        "Ref": "env"
                                    }
                                ]
                            ]
                        }
                    ]
                },
                "Subscription": [
                    {
                        "Endpoint": {
                            "Fn::Sub": "${apiLinksLockerAPIRootUrl}/reminder/notifications"
                        },
                        "Protocol": "https"
                    }
                ]
            }
        },
        "ReminderNotificationTopicAccessPolicy": {
            "Type": "AWS::SNS::TopicPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Sid": "Allow-Cloudwatch-Publish-To-SNS-Topic",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "events.amazonaws.com"
                            },
                            "Action": [
                                "sns:Publish"
                            ],
                            "Resource": {
                                "Ref": "ReminderNotificationTopic"
                            }
                        }
                    ]
                },
                "Topics": [
                    {
                        "Ref": "ReminderNotificationTopic"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "Arn": {
            "Value": {
                "Ref": "ReminderNotificationTopic"
            }
        },
        "Name": {
            "Value": {
                "Fn::GetAtt": [
                    "ReminderNotificationTopic",
                    "TopicName"
                ]
            }
        }
    }
}